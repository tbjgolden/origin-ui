{
  "compilerOptions": {
    "target": "es2017",
    "lib": [],
    "jsx": "react",
    "module": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["typings.d.ts", "cli/**/*", "lib/**/*", ".scripts/**/*"]
}
